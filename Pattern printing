#include <iostream>
using namespace std;
int main() 
{ 
    int x, i, j, y; 
    cout << "Enter a number:";
    cin >> x;
    cout << "Value of x: " << x << endl; 
    for (i = 1; i <= x; i++) { 
        for (j = 1; j <= x; j++) { 
            if(i<j)
            {
                y=i;
            }
            else
            {
                y=j;
            }
            cout << x - y + 1; 
        } 
        cout << endl; 
    } 
    return 0; 
}
